@model IEnumerable<HomeWork3Data.DataModel.User>

@helper ShowImageFromBase(int userid)
{
    <img id="image" src='@Url.Action("GetImage", "User", new { id = userid})' width="100" height="100" />
}

@helper InfoList(IEnumerable<HomeWork3Data.DataModel.User> list)
{
    foreach (var item in list) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.MailLink(item.Email, item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlockDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateUpdated)
        </td>
        <td>
            @ShowImageFromBase(item.UId)
        </td>
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UId })
        </td>
        }
    </tr>
}
}

